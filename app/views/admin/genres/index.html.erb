<div class="container">
  <h3>ジャンル一覧・追加</h3>
    <div class="row mt-4">
      <div class="col-6 mr-auto">
        <%= form_with model: @genre, url: admin_genres_path do |f| %>
          <div class="form-inline">
            <div class="form-group mb-2 mr-2">
              <h6>ジャンル名</h6>
            </div>
            <div class="form-group mx-sm-5 mb-2">
              <%= f.text_field :name %>
            </div>
            <div class="form-group mb-2">
              <%= f.submit '新規登録', class:"btn btn-success" %>
            </div>
          </div>
        <% end %>
        <table class="table table-hover table-inverse table-sm">
            <thead class="thead-light">
              <tr>
                <th>ジャンル</th><th colspan="2"></th>
              </tr>
            </thead>
            <tbody>
              <% @genres.each do |genre| %>
              <tr>
                <td>
                  <%= genre.name %>
                </td>
                <td>
                  <%= link_to "編集する", edit_admin_genre_path(genre), class:"btn btn-success" %>
                </td>
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>
    </div>
  </div>
