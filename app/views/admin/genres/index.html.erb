<!DOCTYPE html>
<html>
  <body>
    <main>
      <div class="container">
        <h3>ジャンル一覧・追加</h3>
        <div class="row mt-5">
          <div class="col-sm-4">
            <form class="form-inline">
              <div class="form-group">
                <%= form_with model: @genre, url: admin_genres_path do |f| %>
                  <h6>ジャンル名</h6>
                  <%= f.text_field :name %>
                  <%= f.submit '新規登録', class:"btn btn-success" %>
                <% end %>
              </div>
            </form>
            <table class="table table-hover table-inverse table-sm">
              <thead class="thead-light">
                <tr>
                  <th>ジャンル</th>
                </tr>
              </thead>
              <tbody>
                <% @genres.each do |genre| %>
                <tr>
                  <td>
                    <%= genre.name %>
                  </td>
                  <td>
                    <%= link_to "編集する", edit_admin_genre_path(genre), class:"btn btn-success" %>
                  </td>
                </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </main>
  </body>
</html>
