<!DOCTYPE html>
<html>
  <body>
    <main>
      <div class="container">
        <h3>管理者ログイン</h3>
          <div class="row mt-5 justify-content-center">
            <!--<div class="col-6">-->
              <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <div class="row mb-3">
                <div class="col-6">
                  <div class="field">
                    <%= f.label :"メールアドレス" %>
                  </div>
                </div>
                <div class="col-6">
                  <div class="field">
                    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
                  </div>
                </div>
              </div>
              <div class="row mb-5">
                <div class="col-6">
                  <div class="field">
                    <%= f.label :"パスワード" %>
                  </div>
                </div>
                <div class="col-6">
                  <div class="field">
                    <%= f.password_field :password, autocomplete: "current-password" %>
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="col-4">
                  <div class="actions">
                    <%= f.submit "ログイン", class:"btn btn-primary" %>
                  </div>
                </div>
              </div>
              <% end %>
            </div>
          </div>
        </div>
      <%= render "admin/shared/links" %>
    <%= yield %>
    </main>
  </body>
</html>