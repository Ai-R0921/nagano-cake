<div class="container">
  <h3>管理者ログイン</h3>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="row mt-5 mb-3 justify-content-start">
      <%= f.label :email, "メールアドレス", class:"col-4 text-right" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"col-4" %>
    </div>
    <div class="row mb-5">
      <%= f.label :password, "パスワード", class:"col-4 text-right" %>
      <%= f.password_field :password, autocomplete: "current-password", class:"col-4" %>
    </div>
    <div class="row mb-6">
      <div class="col-6 text-right">
        <%= f.submit "ログイン", class:"btn btn-primary" %>
      </div>
    </div>
  <% end %>
</div>
<%= render "admin/shared/links" %>
<%= yield %>