<div class="container">
  <h3>注文履歴一覧</h3>
    <div class="row">
      <div class="col-8 mx-auto">
        <table class="table table-hover table-inverse">
          <thead class="thead-light">
            <tr>
              <th>購入日時</th>
              <th>購入者</th>
              <th>注文個数</th>
              <th>注文ステータス</th>
            </tr>
          </thead>
          <tbody>
            <% @orders.each do |order| %>
            <tr>
              <td>
                <%= order.created_at %>
              </td>
              <td>
                <%= customer.last_name.first_name %>
              </td>
              <td>
                <%= order_details.amount %>
              </td>
              <td>
                <%= order.status %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>