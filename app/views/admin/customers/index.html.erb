<!DOCTYPE html>
<html>
  <body>
    <main>
      <div class="container">
        <h3>会員一覧</h3>
        <div class="row">
          <div class="col-8 mx-auto">
            <table class="table table-hover table-inverse">
              <thead class="thead-light">
                <tr>
                  <th>会員ID</th>
                  <th>氏名</th>
                  <th>メールアドレス</th>
                  <th>ステータス</th>
                </tr>
              </thead>
              <tbody>
                <% @customers.each do |customer| %>
                <tr>
                  <td>
                    <%= customer.id %>
                  </td>
                  <td>
                    <%= link_to customer.name, admin_customer_path(customer) %>
                  </td>
                  <td>
                    <%= customer.email %>
                  </td>
                  <td>
                    <%= customer.is_deleted ? '有効' : '退会' %>
                  </td>
                </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </main>
  </body>
</html>