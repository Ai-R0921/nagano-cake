<div class="container">
  <h3>会員詳細</h3>
    <div class="row mt-4">
      <table class="table table-borderless">
        <thead></thead>
        <tbody>
          <tr>
            <th>
              会員ID
            </th>
            <td>
              <%= @customer.id %>
            </td>
            <th>
              氏名
            </th>
            <td>
              <%= @customer.last_name.first_name %>
            </td>
            <th>
              フリガナ
            </th>
            <td>
              <%= @customer.last_name_kana.first_name_kana %>
            </td>
            <th>
              郵便番号
            </th>
            <td>
              <%= @customer.postal_code %>
            </td>
            <th>
              住所
            </th>
            <td>
              <%= @customer.address %>
            </td>
            <th>
              電話番号
            </th>
            <td>
              <%= @customer.telephone_number %>
            </td>
            <th>
              メールアドレス
            </th>
            <td>
              <%= @customer.email %>
            </td>
            <th>
              会員ステータス
            </th>
            <td>
              <%= @customer.is_deleted ? '有効' : '退会' %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>