<h3>商品新規登録</h3>
<%= form_with model: @item, url: admin_items_path, method: :post do |f| %>
  <p>商品画像</p>
  　<%= f.file_field :image, accept: "image/*" %>
  <p>商品名</p>
  　<%= f.text_field :name, class:"form-control", placeholder:"商品名" %>
  <p>商品説明</p>
  　<%= f.text_area :introduction, class:"form-control", placeholder:"ここに説明文を記述します" %>
  <p>ジャンル</p>
  　<%= f.collection_select :genre_id, Genre.all, :id, :name %>

  <p>税抜価格</p>
  　<%= f.text_field :price, class:"form-control", placeholder:"1000" %>
  <p>販売ステータス</p>
  　<%= form_with(model: @item, local: true) do |f| %>
  　   <%= f.radio_button :is_active, :sale, checked: true %>
  　   <%= f.label :is_active, "販売中", {value: :sale, style: "display: inline-block;"} %>
  　   <%= f.radio_button :is_active, :sold %>
  　   <%= f.label :is_active, "販売停止中", {value: :sold, atyle: "display: inline-block;"} %>
  　<% end %>
  <%= f.submit '新規登録', class:"btn btn-success" %>
<% end %>


