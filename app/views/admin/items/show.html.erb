<div class="container">
  <h3>商品詳細</h3>
  <div class="row mt-5">
    <div class="col-md-4">
      <% if @item.image.attached? %>
        <%= image_tag @item.image, size: '300x200' %>
      <% else %>
        <%= image_tag 'NO_IMAGE.png', size: '300x200' %>
      <% end %>
    </div>
    <div class="col-md-2">
      <p>商品名</p>
      <p style="line-height:3rem">商品説明</p>
      <p style="line-height:3rem">ジャンル</p>
      <p style="line-height:1rem">税込価格<br>(税抜価格)</p>
      <p style="line-height:4rem">販売ステータス</p>
    </div>
    <div class="col-md-6 mr-auto">
      <div class="mb-4">
        <%= @item.name %>
      </div>
      <div class="mb-5">
        <%= @item.introduction %>
      </div>
      <div class="mb-4">
        <%= @item.genre.name %>
      </div>
      <div class="mb-5">
        <%= @item.add_tax_price.to_s(:delimited) %>(<%= @item.price %>)円
      </div>
      <div class="mb-3">
        <!--#if文使う-->
        <%= @item.is_active ? '販売中' : '販売停止中' %>
      </div>
    </div>
    <div class="col text-center mt-5">
     <%= link_to "編集する", edit_admin_item_path(@item), class:"btn btn-success" %>
    </div>
  </div>
</div>