<div class="container">

    <div class="row justfy-content-between">
      <div class="col-4">
      <h3>商品一覧</h3>
      </div>
        <div class="col-md-4 offset-md-4 text-right">
        <a class="btn btn-primary rounded-circle px-6 p-2" style="width:3rem;height:3rem;" href="/admin/items/new" role="button">＋</a>
        </div>
    </div>
        <div class="row mt-3">
        <div class="col mx-auto">
        <table class="table table-hover table-inverse">
          <thead class="thead-light">
            <tr>
              <th>商品ID</th>
              <th>商品名</th>
              <th>税抜価格</th>
              <th>ジャンル</th>
              <th>ステータス</th>
            </tr>
          </thead>
          <tbody>
            <% @items.each do |item| %>
            <tr>
              <td>
                <%= item.id %>
              </td>
              <td>
                <%= link_to item.name, admin_item_path(item) %>
              </td>
              <td>
                <%= item.price %>
              </td>
              <td>
                <%= item.genre.name %>
              </td>
              <td>
                <%= item.is_active ? '販売中' : '販売停止中' %>
              </td>
            </tr>
            <% end %>

          </tbody>
        </table>
        <%= paginate @items %>
      </div>
    </div>
  </div>
