<div class="container">
  <h3>商品編集</h3>
  <div class="row mt-5">
    <div class="col-md-2 ml-auto">
      <p style="line-height:2">商品画像</p>
      <p style="line-height:2">商品名</p>
      <p style="margin-bottom:11em;">商品説明</p>
      <p style="line-height:1.5">ジャンル</p>
      <p style="line-height:2">税抜価格</p>
      <p style="line-height:2">販売ステータス</p>
    </div>
    <div class="col-md-5 mr-auto">
      <%= form_with model: @item, url: admin_item_path do |f| %>
      <div class="mb-3">
        <%= f.file_field :image, accept: "image/*" %>
      </div>
      <div class="mb-3">
        <%= f.text_field :name, style: "width:80%", class:"form-control", autofocus: true %>
      </div>
      <div class="mb-3">
        <%= f.text_area :introduction, class: "text", size: "45x7", autofocus: true %>
      </div>
      <div class="mb-3">
        <%= f.collection_select :genre_id, Genre.all, :id, :name %>
      </div>
      <div class="mb-3 d-flex">
        <%= f.text_field :price, style: "width:80%", class:"form-control", autofocus: true %><span>円</span>
      </div>
      <div class="mb-3">
        <%= f.radio_button :is_active, :true %>
        <%= f.label :is_active, "販売中", {value: true, style: "display: inline-block;"} %>
        <%= f.radio_button :is_active, :false %>
        <%= f.label :is_active, "販売停止中", {value: :false, style: "display: inline-block;"} %>
      </div>
      <div class="col">
        <%= f.submit '変更を保存', class:"btn btn-success" %>
      </div>
      <% end %>
    </div>
  </div>
</div>