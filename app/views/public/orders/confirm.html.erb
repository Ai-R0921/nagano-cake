<div class="container">
  <h3>注文情報確認</h3>
  <div class="row">
    <div class="col-8">
      <table class="table table-bordered">
        <thead class="table_th">
          <tr>
            <th style="width: 40%">商品名</th>
            <th style="width: 20%">単価(税込)</th>
            <th style="width: 20%">数量</th>
            <th style="width: 20%">小計</th>
          </tr>
        </thead>
        <tbody>
          <% @cart_items.each do |cart_item| %>
          <tr>
            <td>
              <% if cart_item.item.image.attached? %>
                <%= image_tag cart_item.item.image, size: '60x40' %>
              <% else %>
                <%= image_tag 'NO_IMAGE.png', size: '60x40' %>
              <% end %>
              <%= cart_item.item.name %>
            </td>
            <td><%= cart_item.item.add_tax_price.to_s(:delimited) %></td>
            <td><%= cart_item.amount %></td>
            <td><%= cart_item.subtotal.to_s(:delimited) %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-4">
      <table class="table table-bordered">
        <tr>
          <td class="table_th" style="width: 170px">送料</td>
          <td><%= @order.postage %></td>
        </tr>
        <tr>
          <td class="table_th">商品合計</td>
          <td><%= @total.round.to_s(:delimited) %></td>
        </tr>
        <tr>
          <td class="table_th">請求金額</td>
          <td><%= @order.total_payment %></td>
        </tr>
      </table>
    </div>
  </div>
  <div class="row mt-5">
    <div class="col-8">
      <table class="table table-borderless">
        <tbody>
          <tr>
            <td>支払方法</td>
            <td><%= @order.payment_method %></td>
          </tr>
          <tr>
            <td>お届け先</td>
            <td>
              〒<%= @order.postal_code %>
              <%= @order.address %><br>
              <%= @order.name %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row mt-5">
    <div class="col text-center">
      <%= form_with model: @order do |f| %>
        <%= f.hidden_field :customer_id %>
        <%= f.hidden_field :postal_code %>
        <%= f.hidden_field :address %>
        <%= f.hidden_field :name %>
        <%= f.hidden_field :payment_method %>
        <%= f.hidden_field :total_payment %>
        <%= f.hidden_field :postage %>
        <%= f.hidden_field :atatus %>
      <%= f.submit "注文を確定する", class:"btn btn-success" %>
      <% end %>
    </div>
  </div>
</div>
