<div class="container fluid">
  <h3>注文履歴一覧</h3>
  <div class="row mt-5">
    <table class="table table-bordered">
      <thead class="thead-light">
        <tr>
          <th style="width: 10%">注文日</th>
          <th style="width: 35%">配送先</th>
          <th style="width: 15%">注文商品</th>
          <th style="width: 10%">支払金額</th>
          <th style="width: 15%">ステータス</th>
          <th style="width: 15%">注文詳細</th>
        </tr>
      </thead>
      <tbody>
        <% @orders.each do |order| %>
        <tr>
          <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
          <td>
            〒<%= order.postal_code %><br>
            <%= order.address %><br>
            <%= order.name %>
          </td>
          <td>
            <% order.order_details.each do |order_detail| %>
            <%= order_detail.item.name %>
            <% end %>
          </td>
          <td><%= order.total_payment.to_s(:delimited) %>円</td>
          <td><%= order.status %></td>
          <td align="center"><%= link_to "表示する", order_path(order), class:"btn btn-primary" %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
