<div class="container">
  <h3>マイページ</h3>
  <div class="row mt-4">
    <div class="col-4 text-left">
      <div class="form-inline">
        <div class="form-group mb-2 mr-5">
          <h4 class="font-weight-bold">登録情報</h4>
        </div>
        <div class="form-group mb-2">
          <%= link_to "編集する", edit_customer_path(current_customer), class:"btn btn-success" %>
        </div>
      </div>
    </div>
  </div>
  <div class="row mt-3">
    <div class="col-8">
      <table border="2" rules="all">
        <tbody class="profile_table">
          <tr>
            <td class="table_th" style="width: 170px">氏名</td>
            <td scope="col" style="width: 450px"><%= @customer.last_name %>　<%= @customer.first_name %></td>
          </tr>
          <tr>
            <td class="table_th">カナ</td>
            <td><%= @customer.last_name_kana %>　<%= @customer.first_name_kana %></td>
          </tr>
          <tr>
            <td class="table_th">郵便番号</td>
            <td><%= @customer.postal_code %></td>
          </tr>
          <tr>
            <td class="table_th">住所</td>
            <td><%= @customer.address %></td>
          </tr>
          <tr>
            <td class="table_th">電話番号</td>
            <td><%= @customer.telephone_number %></td>
          </tr>
          <tr>
            <td class="table_th">メールアドレス</td>
            <td><%= @customer.email %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row mt-3">
    <div class="col-5 text-left">
      <div class="form-inline">
        <div class="form-group mb-2 mr-5">
          <h4 class="font-weight-bold">配送先</h4>
        </div>
        <div class="form-group mb-2">
          <%= link_to "一覧を見る", addresses_path, class:"btn btn-primary" %>
        </div>
      </div>
    </div>
  </div>
  <div class="row mt-3">
    <div class="col-5 text-left">
      <div class="form-inline">
        <div class="form-group mb-2 mr-4">
          <h4 class="font-weight-bold">注文履歴</h4>
        </div>
        <div class="form-group mb-2">
          <%= link_to "一覧を見る", orders_path, class:"btn btn-primary" %>
        </div>
      </div>
    </div>
  </div>
</div>