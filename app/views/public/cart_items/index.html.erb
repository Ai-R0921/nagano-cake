<div class="container">
  <h3>ショッピングカート</h3>
  <!--<%= link_to "カートを空にする", cart_items_destroy_all_path, method: :delete, class:"btn btn-danger" %>-->
  <div class="row mt-3 mb-3">
    <table class="table table-bordered">
      <thead class="thead-light">
        <tr>
          <th style="width: 40%">商品名</th>
          <th style="width: 15%">単価(税込)</th>
          <th style="width: 15%">数量</th>
          <th style="width: 15%">小計</th>
          <th style="width: 15%"></th>
        </tr>
      </thead>
      <tbody>
        <% @cart_items.each do |cart_item| %>
        <tr>
          <td>
            <% if cart_item.item.image.attached? %>
              <%= image_tag cart_item.item.image, size: '60x40' %>
            <% else %>
              <%= image_tag 'NO_IMAGE.png', size: '60x40' %>
            <% end %>
            <%= cart_item.item.name %>
          </td>
          <td><%= cart_item.item.add_tax_price %></td>
          <td><%= cart_item.amount %></td>
          <td><%= cart_item.subtotal %></td>
          <td align="center"><%= link_to "削除する", cart_item_path(cart_item), method: :delete, class:"btn btn-danger" %></td>

        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="row">
    <div class="col-6">
      <%= link_to "買い物を続ける", root_path, class:"btn btn-primary" %>
    </div>
    <div class="col-6">
      <table class="table table-bordered">
        <tbody>
          <tr>
            <td>合計金額</td>
            <td><%= @total += @cart_items.subtotal %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
